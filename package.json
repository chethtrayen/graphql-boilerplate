{
  "name": "graphql-boilerplate",
  "version": "1.0.0",
  "description": "This repo contains the starter template for a NodeJS + TypeScript based GraphQL project.",
  "main": "index.js",
  "_moduleAliases": {
    "@config": "./dist/common/config"
  },
  "scripts": {
    "client:dev": "cd ./client && npm start",
    "compile": "tsc",
    "lint": "npx eslint .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "server:dev": "cd ./server && npm run start:dev",
    "server:prod": "set NODE_ENV=prod && node ./dist/server/index.js "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chethtrayen/graphql-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chethtrayen/graphql-boilerplate/issues"
  },
  "homepage": "https://github.com/chethtrayen/graphql-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1"
  },
  "dependencies": {
    "module-alias": "^2.2.2",
    "typescript": "^4.9.4"
  }
}