{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["."],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@config": ["../common/config.ts"],
      "@type": ["../common/types/index.ts"]
    },
    "strict": true,
    "types": ["node"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
