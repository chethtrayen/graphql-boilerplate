{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["."],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@type": ["../common/types/index"]
    },
    "strict": true,
    "types": ["node"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [".", "../common"]
}
